{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Uvicorn (reload + subprocess)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "subProcess": true,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
